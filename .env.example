# Environment Variables for Neurohyderabad Site

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here
GENAI_API_KEY=your_gemini_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Cron Authentication
CRON_SECRET=your_cron_secret_here

# Admin Access
ADMIN_ACCESS_KEY=your_admin_access_key_here

# RAG Configuration
RAG_DOCUMENTS_PATH=./documents
GEMINI_FILE_SEARCH_STORE_NAME=neurohyderabad-medical-docs

# Email (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Analytics (Statsig)
STATSIG_CLIENT_KEY=your_statsig_client_key_here
STATSIG_SERVER_KEY=your_statsig_server_key_here

# File Upload Limits
MAX_FILE_SIZE=2147483648  # 2GB in bytes
ALLOWED_FILE_TYPES=application/pdf,text/plain,text/markdown,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Inngest
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=your_inngest_signing_key_here
