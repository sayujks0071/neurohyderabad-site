+    contactType: "appointments",
+    areaServed: ["IN"],
+    availableLanguage: ["en", "hi", "te"],
+    id: CONTACT_ID
+  });
+
+  const graph = [website, organization, physician, contact];
+
+  return (
+    <script
+      type="application/ld+json"
+      dangerouslySetInnerHTML={{
+        __html: JSON.stringify({
+          "@context": "https://schema.org",
+          "@graph": graph
+        })
+      }}
+    />
+  );
+}
